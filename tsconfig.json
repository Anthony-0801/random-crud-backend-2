{
    "extends": "@tsconfig/node22/tsconfig.json",
    "compilerOptions": {
        "outDir": "./dist",
        "rootDir": "./src",
        "target": "ES2022",
        "lib": ["ES2022", "DOM"],
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"],
            "@config/*": ["src/config/*"],
            "@middlewares/*": ["src/middlewares/*"],
            "@data/*": ["src/data/*"],
            "@errors/*": ["src/errors/*"],
            "@tests/*": ["src/tests/*"]
        }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"],
    "ts-node": { "files": true}
}